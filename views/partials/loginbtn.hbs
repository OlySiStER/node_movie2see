<script>
    function confirmLogout() {
        return confirm('Do you really want to logout?');
    }
</script> 

{{# if login}}
    <form action="/logout" method="get" onsubmit="return confirmLogout()">
        {{# if uname}} 
            <span style="color: white;">Welcome : {{uname}}</span> &nbsp
        {{/if}}
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
    </form>
{{else}}
<button class="btn btn-outline-success my-2 my-sm-0" onclick="window.location.href='/login'">Login</button>
{{/if}}